<html>
 <head>
   <meta charset=“utf-8”>
   <title></title>
   <style media=“screen”>
     .container{
       display: flex;
     }
     .card{
       margin:10px;
       text-align: center;
       flex:1;
       border: 1px solid black;
     }
   </style>
 </head>
 <body>

   <div class=“container”>
     <% for(var i = 0; i<pets.length; i++){ %>
     <div class=“card”>
       <h3><%= pets[i].name %></h3>
       <b><%=pets[i].gender %></b>
       <p><%= pets[i].breed %></p>
     </div>
     <% } %>
   </div>

   <h3>Add a new pet</h3>
   <form action=“/pets” method=“post”>
     <input type=“text” name=“name” placeholder=“Name”>
     <input type=“text” name=“gender” placeholder=“Gender”>
     <input type=“text” name=“breed” placeholder=“Breed”>
     <input type=“submit”>
   </form>

 </body>
</html>
